{% extends "layout.html.twig" %}

{% block title %}
    {{ episode.titre }}
{% endblock %}

{% block content %}
        <div class="panel panel-default">
            <h2 class="panel-heading">{{ episode.titre }}</h2>
            <p class="contenu panel-body">{{ episode.contenu | truncate(1000, true, (' ...'))}}</p>
        </div>

        <div class="panel panel-info">
            <h3 class="panel-heading">Commentaires</h3>
            <p class="panel-body">
                {% for comment in comments %}
                    <strong>{{ comment.pseudo }} said :</strong> {{ comment.contenu }}<br>
                {% else %}
                        Pas encore de commentaire.
                {% endfor %}
            </p>

            <h3>Ajouter un Commentaire : </h3>
            {{ form_start(commentForm) }}
                <div class="form-group">
                    {{ form_errors(commentForm.pseudo) }}
                    {{ form_widget(commentForm.pseudo, { 'attr':  {
                        'rows': '4',
                        'class': 'form-control',
                        'placeholder': 'Saisir votre Pseudo'
                    }}) }}
                </div>

                <div class="form-group">
                    {{ form_errors(commentForm.contenu) }}
                    {{ form_widget(commentForm.contenu, { 'attr':  {
                        'rows': '4',
                        'class': 'form-control',
                        'placeholder': 'Saisir votre message'
                    }}) }}
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Publish comment" />
                </div>
            {{ form_end(commentForm) }}
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
{% endblock %}
